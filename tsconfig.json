{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./server/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "listEmittedFiles": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/start.ts"],
    "exclude": ["./server/", "./node_modules/", "./server/public"]
}
